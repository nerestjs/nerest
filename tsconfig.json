{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",

    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react"
  },
  // TODO: figure out how to setup includes and excludes correctly and in less
  // confusing way. Vite entries do not need to be compiled by tsc ahead of time
  "include": ["server", "build", "bin"],
  "exclude": ["server/production.ts"]
}
